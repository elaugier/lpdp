{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean log",
            "type": "shell",
            "command": "@del %TEMP%\\*lpdp*.log",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "path": "src-ui/",
            "problemMatcher": []
        },
        {
            "label": "start server",
            "type": "shell",
            "command": "lpdp-server.exe",
            "options": {
                "cwd": "${workspaceFolder}/dist/win-lpdp-server.exe"
            },
            "problemMatcher": []
        }
    ]
}